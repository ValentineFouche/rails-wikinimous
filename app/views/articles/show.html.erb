<h1><%= @article.title %></h1>
<h2>Content:</h2>
<p><%= @article.content %></p>
<h2>Delete:</h2>
<p><%= link_to "Delete #{@article.title}",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Edit", edit_article_path %></p>
<p><%= link_to "Back to menu", articles_path %></p>
